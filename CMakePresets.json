{
    "version": 8,
    "configurePresets": [
        {
            "name": "Custom configure preset",
            "displayName": "Custom configure preset",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "msys2-ucrt64",
            "displayName": "MSYS2 UCRT64",
            "description": "Using MSYS2 UCRT64 toolchain",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "D:/Development/Environment/Application/MSYS2/ucrt64/bin/gcc.exe",
                "CMAKE_CXX_COMPILER": "D:/Development/Environment/Application/MSYS2/ucrt64/bin/g++.exe"
            }
        }
    ]
}